<?xml version="1.0" encoding="utf-8"?>

<form>
	<fieldset name="Leistungsart">
		<field
			name="id"
			type="text"
			default="0" />
			
		<field
			name="titel"
			type="text"
			class="inputbox"
			label="Titel"
			description="Titel der Leistungsart"
			size="50"
			required="true" />

		<field
			name="konto"
			type="text"
			class="inputbox"
			label="Fibu-Konto"
			description="Erfolgskonto in der Finanzbuchhaltung"
			size="20"
			required="false" />

	</fieldset>
</form>