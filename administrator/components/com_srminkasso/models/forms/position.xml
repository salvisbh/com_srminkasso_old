<?xml version="1.0" encoding="utf-8"?>

<form>
	<fieldset name="Leistungsposition">
		<field
			name="id"
			type="text"
			default="0" />
			
		<field 	name="fk_userid"
        		type="user"
        		label="Leistungsbez체ger"
        		description="Schwimmer oder Leistungsbez체ger" />

		<field 
			name="fk_leistung" 
			type="sql" 
			label="Leistung" 
			required="true"
			query="SELECT id, concat(titel,' (CHF ',preis,')') as titel FROM #__srmink_leistungen where archiviert=0 "
			key_field="id"
			value_field="titel" />

		<field
			name="individual_preis"
			type="text"
			label="Individueller Preis" />

        <!-- Es werden nur Rechnungslaeufe mit Status kleiner versendet angezeigt -->
		<field 
			name="fk_faktura" 
			type="sql" 
			label="Faktura-Lauf" 
			required="false"
			query="SELECT id, titel FROM #__srmink_fakturierungen where fk_fakturastatus &lt; 2" 
			key_field="id"
			value_field="titel">
			
			<option value="0">Nicht zugewiesen</option>

		</field>

        <field name="kommentar"
               type="textarea"
               label="Kommentar" description="Individueller Kommentar f체r Empf채nger"
               rows="10"
               cols="5"
               filter="raw" />
			
	</fieldset>
</form>